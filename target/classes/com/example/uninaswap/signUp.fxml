<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.PasswordField?>

<ScrollPane stylesheets="@form.css" xmlns="" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.uninaswap.boundary.SignBoundary" fitToWidth="true" vbarPolicy="ALWAYS">
    <content>
        <VBox alignment="TOP_CENTER" styleClass="myPadding">
            <VBox alignment="CENTER" spacing="10">
                <children>
                    <ImageView fitHeight="150" fitWidth="150" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@images/uninaLogo.png"/>
                        </image>
                        <clip>
                            <Circle centerX="75.0" centerY="75.0" radius="75.0" />
                        </clip>
                    </ImageView>
                    <Text text="Unina Swap" textAlignment="CENTER" styleClass="bold,title"/>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="L'app per acquisti, scambi e regali tra studenti Unina"
                          styleClass="description"/>
                </children>
                <padding>
                    <Insets top="40.0" bottom="20.0"/>
                </padding>
            </VBox>

            <VBox alignment="CENTER" spacing="30.0">
                <children>
                    <VBox alignment="CENTER" spacing="13">
                        <children>
                            <VBox alignment="CENTER" spacing="15.0">

                            </VBox>
                            <VBox alignment="CENTER" spacing="5">
                                <children>
                                    <Text text="Matricola" styleClass="label"/>
                                    <TextField fx:id="matricolaField" promptText="123456789" styleClass="form-field"/>
                                    <Text text="Inserire una Matricola valida (almeno un numero)" fx:id="erroreMatricola" styleClass="error-text" visible="false" managed="false"/>

                                </children>
                            </VBox>
                            <VBox alignment="CENTER" spacing="5">
                                <children>
                                    <Text text="Username" styleClass="label"/>
                                    <TextField fx:id="usernameField" promptText="Username1234" styleClass="form-field"/>
                                    <Text text="Inserire un username valido (minimo 3 caratteri, massimo 20 e niente caratteri speciali)" fx:id="erroreUsername" styleClass="error-text" visible="false" managed="false"/>
                                </children>
                            </VBox>
                            <VBox alignment="CENTER" spacing="5">
                                <children>
                                    <Text text="Email" styleClass="label"/>
                                    <TextField fx:id="emailField" promptText="Email@studenti.unina.it" styleClass="form-field"/>
                                    <Text text="Inserire un'Email corretta contenente dominio (@studenti.unina.it)" fx:id="erroreEmail" styleClass="error-text" visible="false" managed="false"/>
                                </children>
                            </VBox>

                            <VBox alignment="CENTER" spacing="5">
                                <children>
                                    <Text text="Password" styleClass="label"/>
                                    <PasswordField fx:id="passwordField" promptText="Password" styleClass="form-field"/>
                                    <Text text="Inserire una password corretta (almeno 8 caratteri  massimo 25 almeno 1 maiuscola, almeno 1 minuscola, almeno 1 numero)"
                                          fx:id="errorePassword" styleClass="error-text" visible="false" managed="false"/>
                                </children>
                            </VBox>
                            <VBox alignment="CENTER" spacing="5">
                                <children>
                                    <Text text="Conferma Password" styleClass="label"/>
                                    <PasswordField fx:id="confermaPasswordField" promptText="Conferma Password" styleClass="form-field"/>
                                    <Text text="Le password non coincidono" fx:id="erroreConfermaPassword" styleClass="error-text" visible="false" managed="false"/>
                                </children>
                            </VBox>

                        </children>
                    </VBox>
                    <HBox alignment="CENTER" spacing="25.0">
                        <children>
                            <Button fx:id="accediButton" onAction="#onAccediClick"  text="Accedi" styleClass="button"/>
                            <Button fx:id="confermaButton" onAction="#onConfermaClick" text="Conferma" styleClass="button"/>
                        </children>
                    </HBox>
                    <Text text=""
                          fx:id="erroreUtenteEsistente" styleClass="error-text" visible="false" managed="false"/>
                </children>
                <padding>
                    <Insets bottom="20.0"/>
                </padding>
            </VBox>
        </VBox>
    </content>
</ScrollPane>