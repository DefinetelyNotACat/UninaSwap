<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.uninaswap.boundary.GestioneOfferteBoundary"
            stylesheets="@homepage.css, @banners.css, @gestioneofferte.css" prefHeight="600.0" prefWidth="900.0">

    <top>
        <HBox alignment="CENTER" styleClass="navbar-container">
            <fx:include source="navbar.fxml" fx:id="navBarComponent"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20" styleClass="main-scroll-pane">
            <padding><Insets top="30" right="20" bottom="30" left="20"/></padding>

            <HBox alignment="CENTER" spacing="0" styleClass="nav-button-container">
                <Button fx:id="btnNavRicevute" text="Offerte Ricevute" onAction="#mostraRicevute"
                        styleClass="nav-btn, nav-btn-left, nav-btn-active"/>
                <Button fx:id="btnNavInviate" text="Offerte Inviate" onAction="#mostraInviate"
                        styleClass="nav-btn, nav-btn-center"/>
                <Button fx:id="btnNavReport" text="Statistiche" onAction="#mostraReport"
                        styleClass="nav-btn, nav-btn-right"/>
            </HBox>

            <StackPane VBox.vgrow="ALWAYS">

                <ScrollPane fx:id="viewListaOfferte" fitToWidth="true" styleClass="custom-scroll">
                    <VBox fx:id="containerOfferte" spacing="15" alignment="TOP_CENTER">
                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                    </VBox>
                </ScrollPane>

                <VBox fx:id="viewReport" visible="false" managed="false" spacing="20" alignment="TOP_CENTER"
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">

                    <Label text="Analisi delle Offerte Inviate" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <StackPane fx:id="chartContainer" VBox.vgrow="ALWAYS" minHeight="300"/>

                    <Separator />

                    <VBox spacing="10" alignment="CENTER">
                        <Label text="Dettagli Offerte di Vendita Accettate" style="-fx-font-weight: bold;"/>
                        <HBox spacing="40" alignment="CENTER">
                            <Label fx:id="lblMedia" text="Media: - €" style="-fx-text-fill: #2980b9; -fx-font-size: 16px;"/>
                            <Label fx:id="lblMin" text="Minimo: - €" style="-fx-text-fill: #e67e22; -fx-font-size: 16px;"/>
                            <Label fx:id="lblMax" text="Massimo: - €" style="-fx-text-fill: #27ae60; -fx-font-size: 16px;"/>
                        </HBox>
                    </VBox>
                </VBox>

            </StackPane>
        </VBox>
    </center>
</BorderPane>