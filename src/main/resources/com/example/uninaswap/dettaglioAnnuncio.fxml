<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.uninaswap.boundary.DettaglioAnnuncioBoundary"
            stylesheets="@homepage.css, @banners.css, @dettaglio.css" prefHeight="600.0" prefWidth="900.0">

    <top>
        <HBox alignment="CENTER" styleClass="navbar-container">
            <fx:include source="navbar.fxml" fx:id="navBarComponent"/>
        </HBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="40" style="-fx-background-color: #f4f4f4;">
            <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

            <VBox alignment="CENTER" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-background-radius: 10;">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                <ImageView fx:id="immagineAnnuncio" fitWidth="350" fitHeight="350" preserveRatio="true" smooth="true"/>
            </VBox>

            <VBox spacing="15" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" maxWidth="400">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label fx:id="badgeTipo" text="TIPO" styleClass="badge-base" style="-fx-font-size: 14px;"/>
                    <Text fx:id="txtSede" text="ðŸ“ Sede" style="-fx-fill: #666; -fx-font-size: 14px;"/>
                </HBox>

                <Text fx:id="txtTitoloDescrizione" text="Descrizione Oggetto" styleClass="hero-subtitle" style="-fx-fill: #333; -fx-font-weight: bold;"/>

                <VBox spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                    <Text text="Dettagli Offerta:" style="-fx-font-weight: bold;"/>
                    <Text fx:id="txtDettagliSpecifici" text="Prezzo: ..."/>
                    <Text fx:id="txtCondizioni" text="Condizioni: ..."/>
                    <Text fx:id="txtVenditore" text="Venditore: ..."/>
                </VBox>

                <Region VBox.vgrow="ALWAYS"/>

                <HBox spacing="15">
                    <Button text="Indietro" onAction="#tornaIndietro" styleClass="button-secondary"/>
                    <Button fx:id="btnFaiOfferta" text="Fai un'Offerta" onAction="#apriSchermataOfferta" styleClass="button"/>
                </HBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>