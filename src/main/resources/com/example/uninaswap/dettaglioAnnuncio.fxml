<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.uninaswap.boundary.DettaglioAnnuncioBoundary"
            stylesheets="@homepage.css, @banners.css, @dettaglio.css, @navbar.css"
            styleClass="detail-root">

    <top>
        <HBox alignment="CENTER" styleClass="navbar-container">
            <fx:include source="navbar.fxml" fx:id="navBarComponent"/>
        </HBox>
    </top>

    <center>
        <StackPane>
            <padding><Insets top="40" bottom="40" left="20" right="20"/></padding>

            <HBox alignment="CENTER" spacing="50" maxWidth="1000" styleClass="detail-card">

                <VBox alignment="CENTER" styleClass="image-wrapper">
                    <ImageView fx:id="immagineAnnuncio" fitWidth="400" fitHeight="400" preserveRatio="true" smooth="true"/>
                </VBox>

                <VBox spacing="20" alignment="CENTER_LEFT" prefWidth="450">
                    <HBox spacing="12" alignment="CENTER_LEFT">
                        <Label fx:id="badgeTipo" text="TIPO" styleClass="badge-base"/>
                        <Text fx:id="txtSede" text="ðŸ“ Sede" styleClass="detail-location"/>
                    </HBox>

                    <Text fx:id="txtTitoloDescrizione" text="Titolo Annuncio" styleClass="detail-title" wrappingWidth="430"/>

                    <VBox spacing="15" styleClass="info-section">
                        <VBox spacing="5">
                            <Text text="PROPOSTA" styleClass="info-label"/>
                            <Text fx:id="txtDettagliSpecifici" text="..." styleClass="info-value"/>
                        </VBox>

                        <VBox spacing="5">
                            <Text text="VENDITORE" styleClass="info-label"/>
                            <Text fx:id="txtVenditore" text="..." style="-fx-font-weight: bold; -fx-fill: #343a40;"/>
                        </VBox>
                    </VBox>

                    <Region VBox.vgrow="ALWAYS"/>

                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <Button text="Indietro" onAction="#tornaIndietro" styleClass="btn-back"/>
                        <Button fx:id="btnFaiOfferta" text="Fai un'Offerta" onAction="#apriSchermataOfferta" styleClass="button-primary"/>
                    </HBox>
                </VBox>
            </HBox>
        </StackPane>
    </center>
</BorderPane>