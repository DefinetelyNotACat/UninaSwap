<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.uninaswap.boundary.NavBarComponent"
            stylesheets="@navbar.css">
    <top>
        <HBox alignment="CENTER" spacing="10" styleClass="navbar-container">
            <padding>
                <Insets bottom="8" left="12" right="12" top="8" />
            </padding>

            <ImageView fx:id="logo" fitHeight="35.0" fitWidth="38.0" preserveRatio="true" />

            <ComboBox fx:id="filtroBarraDiRicerca" prefWidth="120" />

            <ComboBox fx:id="filtroCondizione" prefWidth="130" managed="false" visible="false" promptText="Condizione" />
            <ComboBox fx:id="filtroCategoria" prefWidth="130" managed="false" visible="false" promptText="Categoria" />

            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <children>
                    <TextField fx:id="barraDiRicerca" promptText="Cerca..." prefWidth="450" />
                    <Text fx:id="erroreRicerca" managed="false" visible="false" text="Caratteri non validi!" styleClass="error-text-small" />
                </children>
            </VBox>

            <Button fx:id="bottoneRicerca" text="Cerca" styleClass="button-search"/>

            <ImageView fx:id="fotoProfilo" styleClass="profile-picture" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" />

            <Button fx:id="bottoneAggiungiAnnuncio" text="Pubblica Annuncio" styleClass="button-primary"/>
        </HBox>
    </top>
</BorderPane>