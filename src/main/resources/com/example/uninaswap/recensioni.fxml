<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>

<BorderPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.uninaswap.boundary.Recensioni"
            stylesheets="@homepage.css, @recensione.css">

    <top>
        <HBox alignment="CENTER" styleClass="navbar-container">
            <fx:include source="navbar.fxml" />
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding><Insets top="20" right="50" bottom="30" left="50"/></padding>

            <VBox alignment="CENTER" spacing="5">
                <Text fx:id="txtTitolo" styleClass="hero-title" />
                <Text fx:id="txtMedia" styleClass="hero-subtitle" text="Valutazione Media: 0.0/5" />
            </VBox>

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="btnMostraRicevute" text="Ricevute" onAction="#cliccaRicevute" styleClass="button-outline" prefWidth="150"/>
                <Button fx:id="btnMostraDate" text="Fatte" onAction="#cliccaDate" styleClass="button-outline" prefWidth="150"/>
            </HBox>

            <ScrollPane fitToWidth="true" styleClass="main-scroll-pane" VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="containerRecensioni" spacing="15" alignment="TOP_CENTER">
                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                    </VBox>
                </content>
            </ScrollPane>

            <HBox spacing="20" alignment="CENTER">
                <Button text="Torna alla Home" onAction="#tornaHome" styleClass="button-secondary" />
                <Button fx:id="btnLasciaRecensione" text="Lascia una Recensione" onAction="#apriAggiungiRecensione" styleClass="button-primary" />
            </HBox>
        </VBox>
    </center>
</BorderPane>