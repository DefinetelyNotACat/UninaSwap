<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="600.0" prefWidth="900.0"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.uninaswap.boundary.MieiAnnunci"
           stylesheets="@homepage.css">

    <VBox alignment="TOP_CENTER" spacing="10">

        <HBox alignment="CENTER" styleClass="navbar-container">
            <fx:include source="navbar.fxml" />
        </HBox>

        <HBox alignment="CENTER" fillHeight="false" minHeight="50">
            <fx:include fx:id="notifica" source="banners.fxml" />
        </HBox>

        <VBox alignment="CENTER" spacing="5">
            <padding><Insets bottom="10" top="5" /></padding>
            <Text styleClass="hero-title" text="I Tuoi Annunci" />
            <Text styleClass="hero-subtitle" text="Gestisci, visualizza o elimina le tue inserzioni attive" />
        </VBox>

        <StackPane VBox.vgrow="ALWAYS">
            <Text fx:id="testoVuoto" visible="false" managed="false"
                  text="Non hai ancora pubblicato nessun annuncio."
                  style="-fx-font-size: 18px; -fx-fill: #888; -fx-font-style: italic;" />

            <ScrollPane fitToWidth="true" styleClass="main-scroll-pane">
                <content>
                    <FlowPane fx:id="containerAnnunci" alignment="TOP_CENTER" hgap="25" vgap="25">
                        <padding>
                            <Insets bottom="30" left="20" right="20" top="10" />
                        </padding>
                    </FlowPane>
                </content>
            </ScrollPane>
        </StackPane>

        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-border-color: #eee; -fx-border-width: 1 0 0 0;">
            <padding><Insets top="15" bottom="15" /></padding>
            <Button text="â¬… Torna alla Home" onAction="#onIndietroClick" styleClass="button-outline" prefWidth="200" />
        </HBox>

    </VBox>
</StackPane>